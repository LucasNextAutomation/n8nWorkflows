# ============================================================================
# LinkedIn Radar Dashboard - Environment Variables
# ============================================================================

# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ============================================================================
# SUPABASE
# ============================================================================

# Get these from https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (keep secret! Only use server-side)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# DATABASE
# ============================================================================

# Direct database connection (for migrations, optional)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT secret for session encryption
NEXTAUTH_SECRET=your-random-secret-here-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# n8n INTEGRATION
# ============================================================================

# n8n instance URL
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key

# Webhook secret for validating incoming n8n webhooks
WEBHOOK_SECRET=your-webhook-secret-here

# ============================================================================
# EXTERNAL APIS
# ============================================================================

# OpenAI (for AI chat assistant in dashboard)
OPENAI_API_KEY=sk-your-openai-api-key

# Bright Data (for scraping - mainly used in n8n, but can be used for status checks)
BRIGHTDATA_TOKEN=your-bright-data-api-token

# Google (for Drive/Sheets integration - OAuth credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Slack webhook for automation notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook for automation notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# SendGrid for email notifications
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@yourcompany.com

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Vercel Analytics (auto-enabled in Vercel deployments)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_AUTO_SCHEDULING=true
NEXT_PUBLIC_ENABLE_SLACK_INTEGRATION=true

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Environment mode
NODE_ENV=development

# Enable debug logging
DEBUG=false
NEXT_PUBLIC_DEBUG=false

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================

# In production, override these:
# NODE_ENV=production
# NEXTAUTH_URL=https://your-production-domain.com
# DEBUG=false
